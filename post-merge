#!/bin/bash

# Skip if flag is set
if [ -n "$SKIP_POST_MERGE" ]; then
    exit 0
fi

# Get the repository root directory
REPO_ROOT="$(git rev-parse --show-toplevel)"
UPDATE_SCRIPT="$REPO_ROOT/update-assistant.sh"

# Fix script permissions first
sudo chmod +x "$UPDATE_SCRIPT"

# Check if update script exists and is executable
if [ -x "$UPDATE_SCRIPT" ]; then
    echo "Running post-merge update script..."
    "$UPDATE_SCRIPT"
else
    echo "Error: Update script not found or not executable at $UPDATE_SCRIPT"
    exit 1
fi 